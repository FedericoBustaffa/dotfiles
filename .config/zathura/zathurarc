
# window frame configurations
set window-height 3000
set window-width 1000
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 10
set window-title-page true
set guioptions vc

# set scrolling options
set scroll-step 40

# font size
set font "Fira Code 15"

# clipboard configurations
set selection-clipboard clipboard

# mappings

unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen

# ----- colour config ----- 
set notification-error-bg "#fdf6e3"
set notification-error-fg "#dc322f"
set notification-warning-bg "#fdf6e3"
set notification-warning-fg "#dc322f"
set notification-bg "#fdf6e3"
set notification-fg "#dc322f"
set completion-group-bg "#fdf6e3"
set completion-group-fg "#b58900"
set completion-bg "#eee8d5"
set completion-fg "#073642"
set completion-highlight-bg "#b58900"
set completion-highlight-fg "#fdf6e3"
set inputbar-bg "#eee8d5"
set inputbar-fg "#073642"
set statusbar-bg "#fdf6e3"
set statusbar-fg "#073642"
set highlight-color "#b58900"
set highlight-active-color "#cb4b16"
set default-bg "#fdf6e3"
set default-fg "#073642"
set recolor-lightcolor "#eee8d5"
set recolor-darkcolor "#073642"
set index-bg "#eee8d5"
set index-fg "#073642"
set index-active-bg "#b58900"
set index-active-fg "#fdf6e3"
set recolor true
