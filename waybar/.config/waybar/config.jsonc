{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "margin-top": 2,
    "margin-left": 5,
    "margin-right": 5,
    "margin-bottom": 0,
    "spacing": 4, // Gaps between modules (4px)
    "mode": "dock",
    "start_hidden": false,
    "height": 30, // Waybar height (to be removed for auto height)
    "modules-left": [
        "custom/os",
        "cpu",
        "custom/temp",
        "memory",
        "disk"
    ],
    "modules-center": [
        "custom/notification",
        "hyprland/workspaces",
        "clock"
        // "hyprland/window",
        // "tray"
    ],
    "modules-right": [
        "pulseaudio",
        "bluetooth",
        "network",
        "power-profiles-daemon",
        "battery"
    ],
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": false,
        "warp-on-scroll": false,
        "on-click": "activate",
        "format": "{name}",
        "show-empty": false
    },
    "hyprland/window": {
        "format": "",
        "icon": true,
        "icon-size": 20
    },
    "clock": {
        "format": "󰥔 {:%H:%M - 󰃭 %d-%m-%Y}",
        "timezone": "Europe/Rome",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode"          : "year",
            "mode-mon-col"  : 3,
            "weeks-pos"     : "right",
            "on-scroll"     : 1,
            "format": {
                "months":     "<span color='#ffead3'><b>{}</b></span>",
                "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        }
    },
    "custom/os" : {
        "format": "󰣇 "
    },
    "cpu": {
        "format": " {usage}%",
        "tooltip": false
    },
    "memory": {
        "interval": 30,
        "format": " {percentage}%"
    },
    "disk": {
        "interval": 30,
        "format": " {percentage_used}%",
        "path": "/"
    },
    "temperature": {
        "hwmon-path": "/sys/class/hwmon/hwmon6/temp1_input",
        "critical-threshold": 80,
        "interval": 1,
        "format": "{icon} {temperatureC}°C",
        "format-icons": [
            "",
            "",
            ""
        ]
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": [
            "",
            "",
            "",
            "",
            "",
            "",
            "",
            "",
            ""
        ]
    },
    "battery": {
        "states": {
            "good": 75,
            "warning": 25,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-full": "{icon} {capacity}%",
        "format-charging": "{icon} {capacity}%",
        "format-plugged": " {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": {
            "default": [
                "󰁺",
                "󰁻",
                "󰁼",
                "󰁽",
                "󰁾",
                "󰁿",
                "󰂀",
                "󰂁",
                "󰂂",
                "󰁹"
            ],
            "charging": [
                "󰢜",
                "󰂆",
                "󰂇",
                "󰂈",
                "󰢝",
                "󰂉",
                "󰢞",
                "󰂊",
                "󰂋",
                "󰂅"
            ]
        }
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "",
            "performance": "",
            "balanced": "",
            "power-saver": ""
        }
    },
    "network": {
        "format": " ",
        "format-wifi": "󰖩 {essid}",
        "format-ethernet": "󰱓",
        "format-disconnected": "󱚵 ",
        "interval": 10,
        "on-click": "nm-connection-editor"
    },
    "pulseaudio": {
        "format": "{icon}{volume}%",
        "format-headphone": "{icon}{volume}%",
        "format-bluetooth": " {volume}%",
        "format-bluetooth-muted": " 0%",
        "format-muted": "",
        "format-icons": {
            "headphone": " ",
            "default": [
                " ",
                " ",
                " "
            ]
        },
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
    },
    "bluetooth": {
        "format": "󰂯",
        "format-off": "󰂲",
        "format-connected": "󰂱",
        "tooltip": false,
        "on-click": "blueberry"
    },
    "custom/media": {
        "format": "{icon} {output}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "",
            "default": ""
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify-launcher 2> /dev/null" // Filter player based on name
    },
    "custom/power": {
        "format": "",
        "tooltip": false,
        "on-click": "wlogout"
    },
    "custom/temp": {
        "exec": "~/.config/waybar/temperature.sh",
        "interval": 5,
        "tooltip": false
    },
    "custom/notification": {
        "tooltip": true,
        "format": " {icon}",
        "format-icons": {
            "notification": "󱅫 ",
            "none": "󰂜 ",
            "dnd-notification": "󰂠 ",
            "dnd-none": "󰪓 ",
            "inhibited-notification": "󰂛 ",
            "inhibited-none": "󰪑 ",
            "dnd-inhibited-notification": "󰂛 ",
            "dnd-inhibited-none": "󰪑 "
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    }
}
