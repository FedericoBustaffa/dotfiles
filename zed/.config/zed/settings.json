// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "features": {
    "edit_prediction_provider": "none"
  },
  "ssh_connections": [
    {
      "host": "sobigdatas01.isti.cnr.it",
      "username": "fbustaffa",
      "projects": [
        {
          "paths": ["/home/fbustaffa/dev/thesis/src"]
        },
        {
          "paths": ["~/dev"]
        },
        {
          "paths": ["~/dev/explain"]
        },
        {
          "paths": ["~/dev/ppga"]
        }
      ]
    },
    {
      "host": "sobigdatas01.isti.cnr.it",
      "username": "fbustaffa",
      "projects": []
    }
  ],
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font",
    "font_size": 15,
    "dock": "right",
    "detect_venv": {
      "on": {
        "directories": [".env"],
        "activate_script": "default"
      }
    }
  },
  "vim_mode": true,
  "base_keymap": "VSCode",
  "relative_line_numbers": true,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 16,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 17,
  "theme": {
    "mode": "system",
    "light": "Rosé Pine",
    "dark": "Rosé Pine"
  },
  "languages": {
    "C++": {
      "language_servers": ["clangd"],
      "format_on_save": "on",
      "extra_clang_arguments": ["-std=c++17"]
    },
    "C": {
      "language_servers": ["clangd"],
      "format_on_save": "on"
    },
    "lsp": {
      "pyright": {
        "settings": {
          "python": {
            "pythonPath": ".env/bin/python"
          },
          "python.analysis": {
            "diagnosticMode": "workspace",
            "typeCheckingMode": "strict"
          }
        }
      }
    },
    "Python": {
      "language_servers": ["ruff", "pyright"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": false
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  }
}
